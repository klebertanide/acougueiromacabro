{
  "openapi": "3.1.0",
  "info": {
    "title": "DeusTeEnviouIsso API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://deus-w0i8.onrender.com"
    }
  ],
  "paths": {
    "/falar": {
      "post": {
        "summary": "Gera áudio com ElevenLabs",
        "operationId": "falar",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "texto": { "type": "string" }
                },
                "required": ["texto"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Áudio gerado com sucesso"
          }
        }
      }
    },
    "/transcrever": {
      "post": {
        "summary": "Transcreve o áudio gerado",
        "operationId": "transcrever",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "audio_url": { "type": "string" }
                },
                "required": ["audio_url"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Transcrição retornada"
          }
        }
      }
    },
    "/gerar_csv": {
      "post": {
        "summary": "Gera CSV, SRT e TXT com prompts e envia ao Drive",
        "operationId": "gerarCsv",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "transcricao": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "inicio": { "type": "number" },
                        "fim":    { "type": "number" },
                        "texto":  { "type": "string" }
                      },
                      "required": ["inicio", "fim", "texto"]
                    }
                  },
                  "prompts": {
                    "type": "array",
                    "items": { "type": "string" }
                  },
                  "descricao":    { "type": "string" },
                  "mp3_filename": { "type": "string" },
                  "slug":         { "type": "string" }
                },
                "required": ["transcricao", "prompts", "descricao"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Arquivos gerados e enviados ao Drive"
          }
        }
      }
    },
    "/upload_zip": {
      "post": {
        "summary": "Faz upload de imagens .zip e associa automaticamente",
        "operationId": "uploadZip",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "zip": {
                    "type": "string",
                    "format": "binary"
                  }
                },
                "required": ["zip"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Imagens processadas e selecionadas"
          }
        }
      }
    },
    "/montar_video": {
      "post": {
        "summary": "Monta vídeo completo com base no contexto anterior",
        "operationId": "montarVideo",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "slug":      { "type": "string" },
                  "folder_id": { "type": "string" }
                },
                "required": ["folder_id"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Vídeo montado com sucesso e enviado ao Drive"
          }
        }
      }
    }
  }
}
