{
  "openapi": "3.1.0",
  "info": {
    "title": "API Deus Te Enviou Isso",
    "version": "1.0.0",
    "description": "API que converte texto em voz, gera transcrição, arquivos CSV/SRT/TXT e monta vídeos automáticos com imagens e narração."
  },
  "servers": [
    {
      "url": "https://deus-w0i8.onrender.com"
    }
  ],
  "paths": {
    "/falar": {
      "post": {
        "summary": "Gera áudio a partir de um texto",
        "operationId": "falar",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "texto": {
                    "type": "string",
                    "description": "Texto a ser convertido em áudio"
                  }
                },
                "required": ["texto"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Áudio gerado com sucesso"
          }
        }
      }
    },
    "/transcrever": {
      "post": {
        "summary": "Transcreve um áudio MP3 para texto com marcações de tempo",
        "operationId": "transcrever",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "audio_url": {
                    "type": "string",
                    "description": "URL do áudio gerado anteriormente"
                  }
                },
                "required": ["audio_url"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Transcrição retornada com sucesso"
          }
        }
      }
    }
  }
}